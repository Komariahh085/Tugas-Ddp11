#luas segitiga
def luas_segitiga(tinggi, alas):
    hasil = (tinggi * alas) * 0.5
    print('hasil luas segitiga dari', 0.5, '*', alas, '*', tinggi,'=',hasil)
def keliling_segitiga(a, b, c):
    hasil= a + b + c
    print('hasil keliling segitiga dari', a, '+', b,'+', c,'=',hasil)

# luas persegi
def luas_persegi(sisi):
    hasil = sisi * sisi
    print('hasil luas persegi dari', sisi, '*', sisi, '=',hasil)
def keliling_persegi(sisi):
    hasil= 4 * sisi
    print('hasil keliling persegi dari', 4, '*', sisi, '=',hasil)

# luas persegi panjang
def luas_persegi_panjang(panjang, lebar):
    hasil = panjang * lebar
    print('hasil luas persegi panjang dari', panjang, '*', lebar, '=', hasil)
def keliling_persegi_panjang(panjang, lebar):
    hasil= 2 * (panjang + lebar)
    print('hasil keliling persegi panjang dari', 2, '*', panjang, '+', lebar, '=',hasil)

# luas belah ketupat
def luas_belah_ketupat(diagonal1, diagonal2):
    hasil = 0.5 * diagonal1 * diagonal2
    print('hasil luas belah ketupat dari',0.5, '*', diagonal1, '*', diagonal2, '=',hasil)
def keliling_belah_ketupat(sisi):
    hasil= 4 * sisi
    print('hasil keliling belah ketupat dari', 4, '*', sisi, '=',hasil)

# luas jajar genjang
def luas_jajar_genjang(alas,tinggi):
    hasil = alas * tinggi
    print('hasil luas jajar genjang dari', alas ,'*',  tinggi,'=',hasil)
def keliling_jajar_genjang(sisi1, sisi2):
    hasil= 2 * (sisi1 + sisi2)
    print('hasil keliling jajar genjang dari', 2, '*', sisi1, '*', sisi2, '=',hasil)
